        <label for="">Image</label>
        <input
          class="form-control"
          type="text"
          name="img"
          value="{{post.img}}"
        />
      </div>
      <div class="mb-3">
        <label for="">Title</label>
        <input
          class="form-control"
          type="text"
          name="title"
          value="{{post.title}}"
        />
      </div>
      <div class="mb-3">
        <label for="">Describtion</label>
        <textarea class="form-control" name="descr">{{post.descr}}</textarea>
      </div>
